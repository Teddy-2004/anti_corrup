# Flask Configuration
SECRET_KEY=change-this-to-a-random-secret-key
FLASK_ENV=development
FLASK_APP=app.py

# Database Configuration
DATABASE_URL=postgresql://postgres:your_password@localhost/anticorruption_db

# Upload Configuration
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=static/uploads

# Session Configuration
PERMANENT_SESSION_LIFETIME=7200

# Pagination
REPORTS_PER_PAGE=20

# For Production (Render or other cloud platforms)
# Uncomment and update these for production deployment
# SECRET_KEY=your-production-secret-key-here
# DATABASE_URL=your-production-database-url-here
# FLASK_ENV=production